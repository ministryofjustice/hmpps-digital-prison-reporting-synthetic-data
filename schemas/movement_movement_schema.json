{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Movement",
  "type": "object",
  "required": ["id", "prisoner", "date", "time", "direction", "type", 
  "origin_code", "origin", "destination_code", "destination", "reason"],
  "properties": {
    "id": { "type": "string" },
    "prisoner": { "type": "integer" },
    "date": { "type": "integer", "x-avro-logicalType": "timestamp-micros"},
    "time": { "type": "integer", "x-avro-logicalType": "timestamp-micros"},
    "direction": { "type": "string"},
    "type": { "type": "string"},
    "origin_code": { "type": "string"},
    "origin": { "type": "string"},
    "destination_code": { "type": "string"},
    "destination": { "type": "string"},
    "reason": { "type": "string"}
  },
  "additionalProperties": false
}